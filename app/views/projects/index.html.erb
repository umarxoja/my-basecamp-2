<div class="box-2">
  <div class="project-uchun mt-3 px-4">
  <h1 style="color: black;">Projects</h1>
  <%= link_to "New project", new_project_path, class: "btn btn-primary"%>
</div>

<div class="row mt-5 mx-5" style="margin-left: 10px;">
  <% @projects.each do |project| %>
  <% if project.user.id == current_user.id%>
<div class="card" style="width: 18rem; margin-left: 7px;" >
  <div class="card-body">
     <h5 class="card-title"><%= project.name %></h5>
<p class="card-text"><%= project.description %>.</p>
        <p href="#" class="card-link"><%= link_to project do %>
    <i class="bi bi-eye"></i>
    </p><% end %>
  </div>
</div>
 <% end %>
 <% end %>
</div> <br> <br>
</div>


